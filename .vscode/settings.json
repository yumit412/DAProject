{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/tmp": true,
    "**/yarn.lock": true,
    "**/yarn-error.log": true,
    ".nuxt": true,
    ".vscode": true
  },
  "prettier.singleQuote": true,
  "prettier.semi": false,
  "eslint.enable": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "files.trimTrailingWhitespace": true,
  "eslint.validate": [
    "javascript",
    { "autoFix": true, "language": "vue" },
    "html"
  ]
}
